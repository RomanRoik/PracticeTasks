            //30.Write a C# program to convert a hexadecimal number to decimal number.
            Console.WriteLine("Enter Hexadecimal number");
            string s = Console.ReadLine();
            char[] arr = new char[s.Length];
            int sum = 0;
            for (int i = 0; i < s.Length; i++)
            {
                arr[i] = s[i];
            }
            for (int i = arr.Length - 1, j = 0; i >= 0; i--, j++)
            {

                switch (arr[i])
                {
                    case '0':
                        {
                            sum += 0 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '1':
                        {
                            sum += 1 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '2':
                        {
                            sum += 2 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '3':
                        {
                            sum += 3 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '4':
                        {
                            sum += 4 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '5':
                        {
                            sum += 5 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '6':
                        {
                            sum += 6 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '7':
                        {
                            sum += 7 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '8':
                        {
                            sum += 8 * (int)Math.Pow(16, j);
                            break;
                        }
                    case '9':
                        {
                            sum += 9 * (int)Math.Pow(16, j);
                            break;
                        }
                    case 'A':
                        {
                            sum += 10 * (int)Math.Pow(16, j);
                            break;
                        }
                    case 'B':
                        {
                            sum += 11 * (int)Math.Pow(16, j);
                            break;
                        }
                    case 'C':
                        {
                            sum += 12 * (int)Math.Pow(16, j);
                            break;
                        }
                    case 'D':
                        {
                            sum += 13 * (int)Math.Pow(16, j);
                            break;
                        }
                    case 'E':
                        {
                            sum += 14 * (int)Math.Pow(16, j);
                            break;
                        }
                    case 'F':
                        {
                            sum += 15 * (int)Math.Pow(16, j);
                            break;
                        }
                    default:
                        {
                            Console.WriteLine("Error input");
                            Console.WriteLine("Press any key to continue...");
                            Console.ReadKey();
                            Environment.Exit(0);
                            break;
                        }
                }

            }
            Console.WriteLine(sum);
            Console.ReadLine();


            //31.Write a C# program to multiply corresponding elements of two arrays of integers
            try
            {
                Console.WriteLine("Enter size of arrays");
                int size = Convert.ToInt32(Console.ReadLine());
                int[] arr1 = new int[size];
                int[] arr2 = new int[size];
                Console.WriteLine($"Enter {size} elements of 1st array");
                for (int i = 0; i < size; i++)
                {
                    arr1[i] = Convert.ToInt32(Console.ReadLine());
                }
                Console.Clear();
                Console.WriteLine($"Enter {size} elements of 2nd array");
                for (int i = 0; i < size; i++)
                {
                    arr2[i] = Convert.ToInt32(Console.ReadLine());
                }
                Console.Clear();
                Console.Write("Array1 : [");
                for (int i = 0; i < size; i++)
                {
                    Console.Write(arr1[i] + " ");
                }
                Console.Write("]\n");
                Console.Write("Array2 : [");
                for (int i = 0; i < size; i++)
                {
                    Console.Write(arr2[i] + " ");
                }
                Console.Write("]\n");
                Console.WriteLine("Multiply corresponding elements of two arrays:");
                for (int i = 0; i < size; i++)
                {
                    Console.Write($"{arr1[i] * arr2[i]} ");
                }
            }
            catch (FormatException)
            {
                Console.WriteLine("Error input");
            }
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


