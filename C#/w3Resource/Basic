            //26.Write a C# program to compute the sum of the first 500 prime numbers.
            bool isprime;
            int sum = 0, n = 0;
            for (int i = 2; i < 2147483647; i++)
            {

                isprime = true;
                for (int j = 2; j < i; j++)
                {
                    if (i % j == 0)
                    {
                        isprime = false;
                    }
                }
                if (isprime == true)
                {
                    n++;
                    sum += i;
                }
                if (n == 500)
                {
                    break;
                }
            }
            Console.WriteLine(sum);
            Console.WriteLine("Enter any key to continue...");
            Console.ReadKey();


            //27 Write a C# program to reverse the words of a sentence
            Console.WriteLine("Enter sentence");
            string s = Console.ReadLine();
            string[] arr = s.Split(' ');
            s = "";
            for (int i = arr.Length - 1; i >= 0; i--)
            {
                s += arr[i] + " ";
            }
            Console.WriteLine(s);
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


