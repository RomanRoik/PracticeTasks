            //24.Write a C# program to find the longest word in a string.
            Console.WriteLine("Enter sentense devided by spaces");
            string s = Console.ReadLine();
            string[] arr = s.Split(' ');
            int max = -1;
            for (int i = 0; i < arr.Length; i++)
            {
                if (arr[i].Length >= max)
                {
                    max = arr[i].Length;
                }
            }
            Console.Write("Longest word: ");
            for (int i = 0; i < arr.Length; i++)
            {
                if (arr[i].Length == max)
                {
                    Console.Write(arr[i] + ' ');
                }
            }
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


