            string[] arr = s.Split(' ');
            if (arr[arr.Length - 1].Length >= 4)
            {
                Console.WriteLine(arr[arr.Length - 1] + arr[arr.Length - 1] + arr[arr.Length - 1] + arr[arr.Length - 1]);
            }
