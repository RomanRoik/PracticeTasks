           // 38.Write a C# program to get a new string of two characters from a given string. 
            The first and second character of the given string must be "P" and "H", so PHP will be "PH".
            Console.WriteLine("Enter string");
            string s = Console.ReadLine();
            if (s[0] == 'P' && s[1] == 'H')
            {
                s = "PH";
            }
            Console.WriteLine(s);
            Console.WriteLine("Enter any key to continue...");
            Console.ReadKey();


            //39.Write a C# program to find the largest and lowest values from three integer values.
            try
            {
                Console.WriteLine("Enter first integer");
                int n1 = Convert.ToInt32(Console.ReadLine());
                Console.WriteLine("Enter second integer");
                int n2 = Convert.ToInt32(Console.ReadLine());
                Console.WriteLine("Enter third integer");
                int n3 = Convert.ToInt32(Console.ReadLine());
                Console.Clear();
                int max = n1, min = n1;
                int[] arr = new int[] { n1, n2, n3 };
                for (int i = 1; i < arr.Length; i++)
                {
                    if (arr[i - 1] == max && arr[i] > arr[i - 1])
                    {
                        max = arr[i];
                    }
                    else if (arr[i - 1] == max && arr[i] < arr[i - 1])
                    {
                        min = arr[i];
                    }
                }
                Console.WriteLine($"Max:{max}\nMin:{min}");
            }
            catch (FormatException)
            {
                Console.WriteLine("Wrong Input");
            }
            Console.WriteLine("Enter any key to continue...");
            Console.ReadKey();


            //40.Write a C# program to check the nearest value of 20 of two given integers and return 0 if two numbers are same.
            Console.WriteLine("Enter first integer");
            int n1 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter second integer");
            int n2 = Convert.ToInt32(Console.ReadLine());
            int diapazon1, diapazon2;
            if (n1 > 20)
            {
                diapazon1 = n1 - 20;
            }
            else
            {
                diapazon1 = 20 - n1;
            }
            if (n2 > 20)
            {
                diapazon2 = n2 - 20;
            }
            else
            {
                diapazon2 = 20 - n2;
            }
            if (diapazon1 == diapazon2)
            {
                Console.WriteLine(0);
            }
            else if (diapazon1 < diapazon2)
            {
                Console.WriteLine(n1);
            }
            else Console.WriteLine(n2);
            Console.WriteLine("Enter any key to continue...");
            Console.ReadKey();

            //41.Write a C# program to check if a given string contains ‘w’ character between 1 and 3 times.
            Console.WriteLine("Enter string");
            string s = Console.ReadLine();
            int count = 0;
            for (int i = 0; i < s.Length; i++)
            {
                if (s[i] == 'w')
                {
                    count++;
                }
            }
            if (count >= 1 && count <= 3)
            {
                Console.WriteLine("True");
            }
            else Console.WriteLine("False");
            Console.WriteLine("Press any key to continue");
            Console.ReadKey();


            //42.Write a C# program to create a new string where the first 4 characters will be in lower case.
            If the string is less than 4 characters then make the whole string in upper case.
            Console.WriteLine("Enter string");
            string s = Console.ReadLine();
            if (s.Length < 4)
            {
                s = s.ToUpper();
            }
            else
            {
                char[] arr = new char[s.Length];
                for (int i = 0; i < s.Length; i++)
                {
                    arr[i] = s[i];
                }
                for (int i = 0; i < 4; i++)
                {
                    if (arr[i] >= 97 && arr[i] <= 122)
                    {
                        arr[i] = Convert.ToChar(Convert.ToInt32(arr[i]) - 32);
                    }
                }
                s = new string(arr);
            }
            Console.WriteLine(s);
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();



           // 44.Write a C# program to create a new string of every other character (odd position) from the first position of a given string
            Console.WriteLine("Enter string");
            string s = Console.ReadLine();
            char[] arr = new char[s.Length / 2];
            for (int i = 0, j = 0; i < s.Length; i++)
            {
                if (i % 2 == 0)
                {
                    arr[j] = s[i];
                    j++;
                }
            }
            string s2 = new string(arr);
            Console.WriteLine(s2);
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


           // 45.Write a C# program to count a specified number in a given array of integers.
            try
            {
                Console.WriteLine("Enter integer");
                int digit = Convert.ToInt32(Console.ReadLine());
                Random rand = new Random();
                int[] arr = new int[rand.Next(10, 20)];
                for (int i = 0; i < arr.Length; i++)
                {
                    arr[i] = rand.Next(100);
                }
                Console.WriteLine($"Number of {digit} present in the said array: {arr[digit]} ");
            }
            catch (FormatException)
            {
                Console.WriteLine("Error input");
            }
            catch (IndexOutOfRangeException)
            {
                Console.WriteLine("Selected index dont exists");
            }
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


            //46.Write a C# program to check if a number appears as either the first or last element of an array of integers and the length is 1 or more.
            Console.WriteLine("Enter digit");
            int digit = Convert.ToInt32(Console.ReadLine());
            Random rand = new Random();
            bool check = false;
            int[] arr = new int[rand.Next(10, 20)];
            for (int i = 0; i < arr.Length; i++)
            {
                arr[i] = rand.Next(30);
                if (i == 0 || i == arr.Length - 1)
                {
                    if (arr[i] == digit)
                    {
                        check = true;
                    }
                }
            }
            Console.WriteLine(check);
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


            //47.Write a C# program to compute the sum of all the elements of an array of integers.
            Random rand = new Random();
            int[] arr = new int[rand.Next(20, 30)];
            int sum = 0;
            for (int i = 0; i < arr.Length; i++)
            {
                arr[i] = rand.Next(50);
                Console.Write(arr[i] + " ");
                sum += arr[i];
            }

            Console.WriteLine($"\nSum:{sum}");
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


            //48.Write a C# program to check if the first element and the last element are equal of an array of integers and the length is 1 or more. 
            Random rand = new Random();
            int[] arr = new int[rand.Next(20, 30)];
            for (int i = 0; i < arr.Length; i++)
            {
                arr[i] = rand.Next(30);
                Console.Write(arr[i] + " ");
            }
            if (arr[0] == arr[arr.Length - 1])
            {
                Console.WriteLine("\nFirst and last elements are equall");
            }
            else
            {
                Console.WriteLine("\nFirst and last elements arent equall");
            }
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


            //49.Write a C# program to check if the first element or the last element of the two arrays ( length 1 or more) are equal.
            Random rand = new Random();
            int size = rand.Next(20, 30);
            int[] arr1 = new int[size];
            int[] arr2 = new int[size];
            for (int i = 0; i < size; i++)
            {
                arr1[i] = rand.Next(15);
                arr2[i] = rand.Next(15);
            }
            Console.Write("First array: ");
            for (int i = 0; i < size; i++)
            {
                Console.Write(arr1[i] + " ");
            }
            Console.Write("\nSecond array: ");
            for (int i = 0; i < size; i++)
            {
                Console.Write(arr2[i] + " ");
            }
            if (arr1[0] == arr2[0] || arr1[size - 1] == arr2[size - 1])
            {
                Console.WriteLine("\nTrue");
            }
            else Console.WriteLine("\nFalse");
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


            //50.Write a C# program to rotate an array (length 3) of integers in left direction.
            Random rand = new Random();
            int[] arr = new int[3];
            Console.Write("First array: ");
            for (int i = 0; i < 3; i++)
            {
                arr[i] = rand.Next(10);
                Console.Write(arr[i] + " ");
            }
            Console.Write("\nArray after reversing: ");
            int temp = arr[0];
            for (int i = 0; i < 2; i++)
            {
                arr[i] = arr[i + 1];
                Console.Write(arr[i] + " ");
            }
            arr[2] = temp;
            Console.Write(arr[2]);
            Console.WriteLine("\nPress any key to continue...");
            Console.ReadKey();


            //51.Write a C# program to get the larger value of an array of integers
            Random rand = new Random();
            int[] arr = new int[rand.Next(10, 20)];
            int max = -1;
            Console.Write("Array: ");
            for (int i = 0; i < arr.Length; i++)
            {
                arr[i] = rand.Next(30);
                Console.Write(arr[i] + " ");
                if (arr[i] > max)
                {
                    max = arr[i];
                }
            }
            Console.WriteLine($"\nMax digit: {max}");
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


            //52.Write a c# program to create a new array of lenght containing the middle elemens of three arrays(each length 3) of integers
            int[] arr1 = new int[3];
            int[] arr2 = new int[3];
            int[] arr3 = new int[3];
            int[] arr4 = new int[3];
            Random rand = new Random();
            for (int i = 0; i < 3; i++)
            {
                arr1[i] = rand.Next(10);
                arr2[i] = rand.Next(10);
                arr3[i] = rand.Next(10);
            }
            arr4[0] = arr1[1];
            arr4[1] = arr2[1];
            arr4[2] = arr3[1];
            Console.Write("First array:");
            for (int i = 0; i < 3; i++)
            {
                Console.Write(arr1[i] + " ");
            }
            Console.Write("\nSecond array:");
            for (int i = 0; i < 3; i++)
            {
                Console.Write(arr2[i] + " ");
            }
            Console.Write("\nThird array:");
            for (int i = 0; i < 3; i++)
            {
                Console.Write(arr3[i] + " ");
            }
            Console.Write("\nNew array:");
            for (int i = 0; i < 3; i++)
            {
                Console.Write(arr4[i] + " ");
            }
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


           // 53.Write a C# programme to check if an array contains an odd number
            Random rand = new Random();
            bool odd = false;
            int[] arr = new int[rand.Next(1, 5)];
            Console.Write("Array: ");
            for (int i = 0; i < arr.Length; i++)
            {
                arr[i] = rand.Next(30);
                Console.Write(arr[i] + " ");
                if (arr[i] % 2 == 0)
                {
                    odd = true;
                }
            }
            Console.Write("\nCheck if an array contains an odd number: ");
            if (odd == true)
            {
                Console.WriteLine("True");
            }
            else Console.WriteLine("False");
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


            //54.Write a C# programme to get the century from a year
            try
            {
                Console.WriteLine("Enter year");
                int year = Convert.ToInt32(Console.ReadLine());
                if (year % 100 == 0)
                {
                    Console.WriteLine($"Century: {year / 100}");
                }
                else
                {
                    if (year > 0)
                    {
                        Console.WriteLine($"Century: {year / 100 + 1}");
                    }
                    else
                        Console.WriteLine($"Century: {year / 100 - 1}");
                }
            }
            catch (FormatException)
            {
                Console.WriteLine("Error input");
            }
            Console.WriteLine("Press any key to continue...");
            Console.ReadKey();


        }
    }
}
