def main():
 CharacterInput()
 
def CharacterInput():
 name = input("Enter your name ")
 age = int(input("Enter your age "))
 repeat = int(input("Enter number "))
 for i in range(repeat):
  print("Hello "+str(name)+" , you will be 100 years old in "+str(2019-age+100))
  
main()
